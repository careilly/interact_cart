=ic_display_cart

= form_tag complete_checkout_path do 
  %article
    -if flash[:error].present?
      #error_explanation
        %p 
          flash[:error] 
    %label.amount
      %span 
        Amount: 
        =@ic_cart.total
        
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{Rails.configuration.stripe[:publishable_key]}" data-description="Order" data-amount="#{(@ic_cart.total*100).to_i}" data-locale="auto"></script>
        

